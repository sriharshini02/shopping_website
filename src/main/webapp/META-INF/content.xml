<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/MyDB" auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="${env.DB_JDBC_URL}"
              username="${env.DB_USER}"
              password="${env.DB_PASSWORD}"
              maxTotal="20"
              maxIdle="10"
              maxWaitMillis="10000"/>
</Context>
